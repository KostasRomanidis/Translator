<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context="com.example.kromanidis.foraadasd.MainActivity">

    <Spinner
        android:id="@+id/language_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_header"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dialog"
        android:layout_weight="0" />

    <ImageView
        android:id="@+id/image_src"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_weight="3"/>


    <LinearLayout
        android:id="@+id/translations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:weightSum="2">



        <TextView
            android:id="@+id/english_wrd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingTop="25dp"
            android:textColor="@color/colorPrimaryText"
            android:background="@color/colorEnglishBackground"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/translation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:paddingTop="25dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryText"
            android:background="@color/colorTranslationBackground"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_shuffle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/btn_shuffle"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_shuffle_pressed"
            android:textColor="@color/colorButtonText"
            android:textStyle="bold"
            android:src="@drawable/ic_shuffle_white_24dp"
            android:drawableTop="@drawable/ic_shuffle_white_24dp"
            android:paddingTop="15dp"/>

        <Button
            android:id="@+id/btn_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/btn_play"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_play_pressed"
            android:textColor="@color/colorButtonText"
            android:textStyle= "bold"
            android:src="@drawable/ic_play_arrow_white_24dp"
            android:drawableTop="@drawable/ic_play_arrow_white_24dp"
            android:paddingTop="15dp" />

    </LinearLayout>
</LinearLayout>
